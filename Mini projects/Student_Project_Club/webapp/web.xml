<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://jakarta.ee/xml/ns/jakartaee
                             http://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">

    <!-- UploadProjectServlet Declaration -->
    <servlet>
        <servlet-name>UploadProjectServlet</servlet-name>
        <servlet-class>com.nt.servlet.UploadProjectServlet</servlet-class>
    </servlet>

    <!-- UploadProjectServlet Mapping -->
    <servlet-mapping>
        <servlet-name>UploadProjectServlet</servlet-name>
        <url-pattern>/upload</url-pattern>
    </servlet-mapping>

    <!-- ShowProjectsServlet Declaration -->
    <servlet>
        <servlet-name>ShowProjectsServlet</servlet-name>
        <servlet-class>com.nt.servlet.ShowProjectsServlet</servlet-class>
    </servlet>

    <!-- ShowProjectsServlet Mapping -->
    <servlet-mapping>
        <servlet-name>ShowProjectsServlet</servlet-name>
        <url-pattern>/show</url-pattern>
    </servlet-mapping>
    
    
    
    <servlet>
    <servlet-name>DownloadServlet</servlet-name>
    <servlet-class>com.nt.servlet.DownloadServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>DownloadServlet</servlet-name>
    <url-pattern>/download</url-pattern>
</servlet-mapping>
    

    <!-- Welcome File -->
    <welcome-file-list>
        <welcome-file>home.html</welcome-file>
    </welcome-file-list>

</web-app>
